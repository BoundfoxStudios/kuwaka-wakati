{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "npm run start -- --port 1420",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist/kuwaka-wakati/browser",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Kuwaka Wakati",
    "version": "../package.json"
  },
  "tauri": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5QzNEQ0YzNTg4NjdFQjMKUldTemZvWlk4OXpEaVR5SDdBWkpGQVlOc3g0V0hBZTY2dXZibTYrLzZwQVVwT1RvcmtNTmY1ZEkK",
      "endpoints": [
        "https://gist.githubusercontent.com/ManuelRauber/c65aab8be88bbbb49f82b1d060e26e52/raw/"
      ]
    },
    "allowlist": {
      "all": false,
      "app": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "save": true,
        "confirm": true
      },
      "fs": {
        "all": false,
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "targets": [
        "appimage",
        "app",
        "dmg",
        "msi",
        "deb",
        "updater"
      ],
      "identifier": "com.boundfoxstudios.kuwakawakati",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "publisher": "Boundfox Studios",
      "copyright": "Copyright Boundfox Studios",
      "category": "Business"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Kuwaka Wakati",
        "minWidth": 800,
        "minHeight": 600,
        "width": 800,
        "height": 600,
        "fileDropEnabled": false,
        "acceptFirstMouse": true
      }
    ]
  }
}
